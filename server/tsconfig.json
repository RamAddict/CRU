{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "alwaysStrict": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "outDir": "dist",
        "module": "CommonJS",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}